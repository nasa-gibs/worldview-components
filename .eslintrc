{
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "plugins": [ "react" ],
  "extends": [ "standard", "plugin:react/recommended" ],
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": "off",
    "react/no-danger": "warn",
    "react/prop-types": "warn",
    "react/no-did-update-set-state": "warn"
  }
}
